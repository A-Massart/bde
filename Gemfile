source "https://rubygems.org"

# Allow multiple platforms for cross-platform compatibility
# Ruby version requirement: 3.1+ for local dev, 3.2+ for GitHub Actions

# Jekyll 4.x for GitHub Actions deployment
gem "jekyll", "~> 4.3"
gem "webrick", "~> 1.8"

group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
  gem "jekyll-gist"
  gem "jekyll-paginate"
end

# Minimal dependencies
gem "kramdown-parser-gfm", "~> 1.1"